// Grid

.container{
  max-width: 1120px;
  margin: 0 auto;
}

.container-fluid {
  max-width: none;
}

.grid {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  grid-gap: 1rem;
}

.grid-1-1 {
  grid-column: span 12;
}

.grid-1-2 {
  grid-column: span 6;
}

.grid-1-3 {
  grid-column: span 4;
}

.grid-1-4 {
  grid-column: span 3;
}

.grid-1-6 {
  grid-column: span 2;
}

.grid-1-12 {
  grid-column: span 1;
}


// Visual / Color

.color {

.color-card {
	padding: 1rem;
	display: flex;
	justify-content: space-between;

	font-family: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}
  
.color-card.dark span {
	color: rgba(0,0,0,.87);
}
  
.color-card.light span {
	color: rgba(255,255,255,.87);
}

}


// Visual / Typography

.typography {

