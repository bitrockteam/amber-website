// Visual / Color

.color {

.color-card {
	padding: 1rem;
	display: flex;
	justify-content: space-between;

	font-family: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}
  
.color-card.dark span {
	color: rgba(0,0,0,.87);
}
  
.color-card.light span {
	color: rgba(255,255,255,.87);
}

}


// Visual / Typography

.typography {

  h1, h2, h3, h4, h5, h6 {
    padding-bottom: 0 ;
    border-bottom: 0;
  }

}


// Visual / Iconography --- da sistemare

.icon-results__cell {
  transition: background-color .25s;
  border-radius: 4px;
  border: 2px solid transparent;
  height: 6rem;
  background-color: #f5f5f5;
}

.icon-results__cell:hover {
  background-color: #E0E0E0;
}

.icon-results .ion, .icon-results__cell {
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.icon-results__cell .ion {
  font-size: 2rem;
  color: #373737;
}