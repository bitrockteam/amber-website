// General

a:focus, a:hover {
    text-decoration: none !important;
}

.navbar .logo {
  max-height: 2rem;
  margin-right: .5rem !important;

}

.home {
  .hero {
    img {
        min-height: 160px;
    }
    .action-button {
        background: #eb6400;
        color: #ffffff;
        box-shadow: inset 0 -3px 0 0 #bf4c00;

        display: inline-block;

        padding: 1rem 1.5rem;
        text-align: center;
        text-decoration: none;
        text-transform: uppercase;
        white-space: nowrap;
        transition: background .1s ease-out, border-color .1s ease-out, color .1s ease-out;

        border-radius: 0;

        &:hover {
            background-color: #d55800;   
        }
    }
  }
}

.content {
    .icon {
        &.outbound {
            display: none;
        }
    }
}

// Sidebar

.sidebar-heading .arrow {
  margin-right: 1rem;
}

// Page

.page {
    .content:not(.custom) > h1:first-child {
        margin-bottom: 3rem;
    }

    .content h1 + p {
        margin-bottom: 3rem;
    }

    .content h2, .content:not(.custom) > h2 {
        margin-bottom: 2rem;
    }

    .content:not(.custom) > h1 + h2,
    .content:not(.custom) > h2 + h4 {
        margin-top: 0;
        padding-top: 0;
    }
}

// Visual / Forms

.forms {

    input[type='email'], input[type='number'], input[type='password'], input[type='search'], input[type='tel'], input[type='text'], input[type='url'], textarea, select {
    margin-bottom: 0;

    min-width: unset;
    width: 100%;
    max-width: 100%;
    }
}


// Visual / Color

.color {

@media (min-width: 768px) {
    .primary, .neutral {
        article:nth-of-type(1) {
            order: 2;
        }

        article:nth-of-type(2) {
            order: 1;
        }
    }
}

.row {
    margin-bottom: 2.5rem;
}

.color-card {
	padding: 1rem;
	display: flex;
	justify-content: space-between;
    font-family: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    text-transform: lowercase;

        &.primary {
            padding: 2rem 1rem;
        }

        &.dark span {
            color: rgba(0,0,0,.87);
        }

        &.light span {
            color: rgba(255,255,255,.87);
        }
    }
}


// Visual / Typography

.typography {

  h1, h2, h3, h4, h5, h6 {
    padding-bottom: 0 ;
    border-bottom: 0;
    margin-bottom: 1rem;
  }
}

// Visual / Grid

.grid-card {
  text-align: center;
  padding: 1rem;
  font-family: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}

.grid-card-container {
  padding: 1rem;
  margin-bottom: 1rem;
  background-color: #EBEBEB;
}

.grid-card-container:last-child {
  margin-bottom: 0;
}

@media (min-width: 768px) {
  .grid-card-container {
    padding: 2rem;
    margin-bottom: 2rem;
  }
}